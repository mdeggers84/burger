<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4 page-header text-center">
      <img src="assets/img/burger.jpg" sloth="https://media.giphy.com/media/3NtY188QaxDdC/giphy.gif" burger="assets/img/burger.jpg"
        class="img-responsive" id="burger-img" alt="burger">
      <h1>Burgers and Stuff</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <ul class="list-group">
        <h2 class="text-center">To Eat</h2>
        {{!--#each loops through burgers data, adding all not devoured to list--}}
        <hr> {{#each burgers}} {{#unless devoured}}
        <li class="list-group-item">
          <div class="row">
            <div class="col-md-7">
              {{this.id}}. {{this.burger_name}}
            </div>
            <div class="col-md-5 text-right">
              <form action="/{{this.id}}?_method=PUT" method="POST">
                <input type="hidden" name="devoured" value="true">
                <button type="submit" class="btn btn-danger devour-btn">Devour Burger</button>
              </form>
            </div>
          </div>
        </li>
        {{/unless}} {{/each}}
      </ul>
    </div>
    <div class="col-md-6">
      <ul class="list-group">
        <h2 class="text-center">Eaten</h2>
        {{!--adds all devoured burgers to list--}}
        <hr> {{#each burgers}} {{#if devoured}}
        <li class="list-group-item">
          {{this.id}}. {{this.burger_name}}
        </li>
        {{/if}} {{/each}}
      </ul>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <form class="create-update-form" action="/" method="POST">
        <div class="form-group">
          <label for="burger-name">New Burger Name</label>
          <input type="text" class="form-control" id="burger-name" name="name">
        </div>
        <button id="add-btn" class="form-control btn btn-primary" type="submit">Add Burger</button>
      </form>
      <form class="create-update-form" action="/?_method=DELETE" method="POST">
        <button id="clear-btn" class="form-control btn btn-danger" type="submit">Clear the Table</button>
      </form>
      <br>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4 page-header">
      <h1>Burgers and Stuff</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4 col-md-offset-2">
      {{#each burgers}} {{#unless devoured}}
      <div class="row">
        <div class="col-md-7">
          {{this.burger_name}}
        </div>
        <div class="col-md-5">
          <form action="/{{this.id}}?_method=PUT" method="POST">
            <input type="hidden" name="devoured" value="true">
            <button type="submit">Devour Burger</button>
          </form>
        </div>
      </div>
      {{/unless}} {{/each}}
    </div>
    <div class="col-md-4">
      {{#each burgers}} {{#if devoured}}
      <p>{{this.burger_name}}</p>
      {{/if}} {{/each}}
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <form class="create-update-form" action="/" method="POST">
        <div class="form-group">
          <label for="burger-name">Burger Name: </label>
          <input type="text" id="burger-name" name="name">
        </div>

        <button class="form-control" type="submit">Add Burger</button>
      </form>
    </div>
  </div>
</div>